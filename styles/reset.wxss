button::after {
  border-radius: 0;
  border: none;
}

button {
  border-radius: 0;
  padding:0;
  margin: 0;
}

image {
  vertical-align: top;
  width: 100%;
  height: 100%;
}
button{
  padding: 0;
  background: transparent;
  line-height: 1;
}
button::after {
  border: none;
} 
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.clearfix::after {
  content: ".";
  clear: both;
  display: block;
  overflow: hidden;
  font-size: 0;
  height: 0;
}
