/* pages/studyDetails/index.wxss */
.title {
  color: #333333;
  font-weight: 500;
  font-size: 44rpx;
  padding: 48rpx 40rpx;
}
.title.canin {
  color: #EC7B7C;
}
.desc {
  color: #999999;
  font-size: 26rpx;
  padding: 0 40rpx 40rpx;
}
.desc text:nth-child(2) {
  margin-left: 40rpx;
  /* color: #e5c07b; */
}
.desc text:nth-child(3) {
  margin-left: 40rpx;
  /* color: #e5c07b; */
}
.content {
  color: #333333;
  font-size: 32rpx;
  padding: 0 40rpx;
  text-align: justify;
}
.content.canin {
  font-weight: 500;
}
.content image {
  max-width: 100%;
  object-fit: cover;
}

.button {
  width: 670rpx;
  height: 80rpx;
  /* position: fixed; */
  
  bottom: 90rpx;
  left: 0;
  right: 0;
  /* margin: auto; */
  margin: 40rpx auto;
  background: #999999;
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 500;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
  box-shadow:0rpx 20rpx 30rpx rgba(0,0,0,0.16);
}
.button.canin {
  background: #EC7B7C;
}
.container {
  width: 670rpx;
  position: relative;
  background: #ffffff;
  border-radius: 40rpx;
  /* padding-bottom: 80rpx; */
  overflow: hidden;
}

.disable {
  width: 96rpx;
  height: 74rpx;
  border: 2rpx solid #707070;
  line-height: 74rpx;
  font-weight: bold;
  text-align: center;
  color: #ccc;
}
.submit {
  width: 100%;
  height: 80rpx;
  background: #EC7B7C;
  border-radius: 40rpx 40rpx 0 0;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 500;
}
.van-cell-group__title {
  text-align: center;
  color: #666666;
  font-size: 36rpx !important;
  padding-top: 40rpx !important;
}
.value-class {
  flex: none !important;
}
.video {
  padding: 0 40rpx;
}
.details__content{
  color: #333333;
  letter-spacing: .034em;
  font-family: 'PingFangSC-Regular';
}