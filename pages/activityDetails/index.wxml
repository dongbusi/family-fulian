<!--pages/studyDetails/index.wxml-->
<view class="title canin">{{details.title}}</view>
<view class="desc">
  <text>{{details.create_at}}</text>
  <text>来源：{{details.village.name}}</text>
</view>
<view class="content">
  <rich-text class="" nodes="{{details.content}}" class="content"></rich-text>
</view>
<view class="button" wx:if="{{details.sign_true == 1 && details.sign_status == 1 }}" bindtap="cancelSign">我要取消报名</view>
<view class="button canin" wx:elif="{{details.sign_true == 1 && details.sign_status == 0}}" bindtap="showNumSetting">我要报名</view>
<view class="button" wx:if="{{details.sign_true == 1 && details.sign_status == 2 }}">报名人数已满</view>
<view class="button" wx:elif="{{details.sign_true == 0}}">我要报名</view>

<van-popup show="{{ show }}" bind:close="closeNumSetting" custom-class="container">
  <view class="container">
    <van-checkbox-group value="{{ result }}" bind:change="onChange">
      <van-cell-group title="请选择参与本次活动的家庭人员" border="{{false}}">
        <van-cell
          wx:for="{{ family }}"
          wx:key="index"
          title="{{ item.realname }}"
          value-class="value-class"
          clickable
          data-index="{{ index }}"
          bind:click="toggle"
        >
          <van-checkbox catch:tap="noop" class="checkboxes-{{ index }}" name="{{ item.id }}" checked-color="#EC7B7C" disabled="{{item.sign.length > 0}}" />
        </van-cell>
      </van-cell-group>
    </van-checkbox-group>
    <view class="submit" style="background: transparent;"></view>
    <view class="submit" bindtap="submit">确定报名</view>
  </view>
</van-popup>