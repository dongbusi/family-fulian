/* pages/family/index.wxss */
.header {
  margin: 32rpx auto;
  width: 670rpx;
  height: 240rpx;
  background: #ffffff;
  box-shadow:0rpx 16rpx 40rpx rgba(130,144,220,0.13);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
}
.share {
  position: absolute;
  right: 0;
  top: 72rpx;
  width: 172rpx;
  height: 80rpx;
  border-radius: 40rpx 0 0 40rpx;
  background: #EC7B7C;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  box-sizing: border-box;
}
.share image {
  width: 48rpx;
  height: 48rpx;
}
.share text {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: bold;
  margin-left: 16rpx;
}
.info {
  display: flex;
  align-items: center;
}
.info image {
  width: 96rpx;
  height: 96rpx;
  border: 10rpx solid #ffffff;
  border-radius: 50%;
  box-shadow:0rpx 6rpx 12rpx rgba(0,0,0,0.16);
}
.info view:nth-child(2) {
  margin-left: 24rpx;
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}
.info view:last-child {
  margin-left: 40rpx;
  color: #EC7B7C;
  font-size: 26rpx;
  font-weight: bold;
}
.avaturl {
  margin-left: 140rpx;
  display: flex;
  align-items: center;
  color: #666666;
  font-size: 26rpx;
  font-weight: 400;
}
.avaturl text {
  flex: none;
}
.avaturl view {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  background: #EC7B7C;
  box-shadow:0rpx 4rpx 8rpx rgba(0,0,0,0.1);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  line-height: 68rpx;
  flex: none;
  margin-left: 10rpx;
}
.avaturl image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow:0rpx 4rpx 8rpx rgba(0,0,0,0.1);
  margin-left: -16rpx;
}
.body__title {
  margin-top: 48rpx;
  text-align: center;
  color: #999999;
  font-size: 36rpx;
}
.body__title::after {
  content: '';
  background:linear-gradient(204deg,rgba(252,221,137,1) 0%,rgba(224,100,123,1) 100%);
  width: 42rpx;
  height: 12rpx;
  display: block;
  margin: 8rpx auto 30rpx;
  border-radius: 10rpx;
}
.body__list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 40rpx;
}
.item {
  flex: none;
  margin-top: 48rpx;
}
.item:nth-child(-n + 2) {
  margin-top: 0;
}
.item__photo {
  width: 320rpx;
  height: 214rpx;
  border-radius: 40rpx;
  box-shadow:0rpx 6rpx 12rpx rgba(0,0,0,0.16);
  position: relative;
}
.item__photo > image:first-child {
  border-radius: 40rpx;
}
.item__photo > image:last-child {
  position: absolute;
  left: 14rpx;
  bottom: -34rpx;
  border: 4rpx solid #ffffff;
  border-radius: 50%;
  width: 68rpx;
  height: 68rpx;

}
.item__info {
  margin-top: 10rpx;
  text-align: center;
}
.item__info > view:first-child {
  color: #EC7B7C;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  text-indent: 1em;
}
.item__info > view:last-child {
  color: #999999;
  font-size: 22rpx;
  font-weight: 400;
  line-height: 32rpx;
  text-indent: 1em;
}
.body::after {
  display: block;
  content: '';
  height: 60rpx;
}