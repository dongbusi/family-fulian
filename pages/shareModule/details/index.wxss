/* pages/photoModule/details/index.wxss */
.item__info {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}
.item__info > image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  flex: none;
}
.item__family {
  margin-left: 24rpx;
  width: 100%;
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 44rpx;
}
.item__family text {
  color: #cccccc;
  font-size: 24rpx;
  line-height: 34rpx;
  font-weight: normal;
}
.header {
  padding: 46rpx 40rpx 30rpx;
}
.list__photo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx 60rpx;
  flex-wrap: wrap;
}
.item__photo.one {
  width: 100%;
  height: 446rpx;
  border-radius: 40rpx;
  overflow: hidden;
} 
.item__photo.two {
  width: 320rpx;
  height: 214rpx;
  border-radius: 40rpx;
  overflow: hidden;
}
.item__photo.three {
  width: 206rpx;
  height: 142rpx;
  border-radius: 40rpx;
  overflow: hidden;
  flex: none;
  margin-top: 30rpx;
}
.item__photo.three:nth-child(-n + 3) {
  margin-top: 0;
}
.desc {
  padding: 0 40rpx;
  color: #666666;
  font-size: 32rpx;
  line-height: 48rpx;
}
.button {
  background: #EC7B7C;
  width: 440rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 60rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 500;
}
.button image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}