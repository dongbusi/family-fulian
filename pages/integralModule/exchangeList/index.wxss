/* pages/integralModule/list/index.wxss */
.container {
  padding: 12rpx 40rpx;
}
.item {
  height: 192rpx;
  border-bottom: 2rpx solid #F4F4F6;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item__desc {
  display: flex;
  align-items: center;
  
}
.item__thumb {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  overflow: hidden;
  flex: none;
}
.item__info {
  margin-left: 30rpx;
  height: 100%;
  padding: 4rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item__button {
  width:160rpx;
  height:64rpx;
  background:#66bf61;
  border-radius:16rpx;
  text-align: center;
  line-height: 64rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  font-family: 'PingFangSC-Medium';
  font-weight: 500;
  flex: none;
}
.item__name {
  font-size: 32rpx;
  font-family: 'PingFangSC-SemiBold';
  color: #454F63;
  font-weight: bold;
  text-align: justify;
  margin-right: 30rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item__time {
  font-size:22rpx;
  font-weight:400;
  color: #78849E;
  margin-top: 10rpx;
}
.overdue {
  color: #999999;
  background: #E4E4E4;
}