  width:670rpx;
  height:96rpx;
  background:#ECEDF1;
  box-shadow:0rpx 6rpx 12rpx rgba(0,0,0,0.16);
  border-radius:48rpx;
  margin: 36rpx auto 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.abled {
  background:rgba(249,57,99,.8);
}
.confirm__button {
  width: 380rpx;
  height: 90rpx;
