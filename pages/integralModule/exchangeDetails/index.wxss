.instructions {
  padding: 64rpx 40rpx 0;
}
.instructions__title {
  color: #000;
  font-family: 'PingFangSC-SemiBold';
  font-size: 40rpx;
}
.instructions__content {
  margin-top: 44rpx;
  color: #EC7B7C;
  font-family: 'PingFangSC-SemiBold';
  font-size: 30rpx;
}
.title {
  font-size:48rpx;
  font-family:'PingFangSC-SemiBold';
  font-weight:bold;
  color: #EC7B7C;
  text-align: center;
  margin-top: 100rpx;
}
.tips {
  margin-top: 32rpx;
  color: #666666;
  text-align: center;
  font-size: 24rpx;

}
.submit {
  width:670rpx;
  height:96rpx;
  background:rgba(249,57,99,.3);
